<h3> Log in <h3> 

<div class = 'span8 well' > 

  <%= form_tag '/login' do %>
    <div class = 'control-group'> 
      <%= label_tag 'Enter email' %> 
      <%= text_field_tag :username %>  
    </div>  

    <div class = 'control-group'> 
      <%= label_tag 'Enter Password' %> 
      <%= password_field_tag :password %>  
    </div>  

    <%= submit_tag 'Login', class: 'btn btn-primary' %> 

    <% end %> 

</div> 